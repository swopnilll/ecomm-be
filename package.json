{
  "name": "ecomm-api",
  "version": "1.0.0",
  "description": "",
  "type": "module",
  "scripts": {
    "dev": "tsx --watch --env-file .env.development src/server.ts",
    "dev:staging": "tsx --watch --env-file .env.staging src/server.ts",
    "dev:prod": "tsx --watch --env-file .env.production src/server.ts",
    "seed": "tsx --env-file .env src/seeds/index.ts",
    "seed:dev": "tsx --env-file .env.development src/seeds/index.ts",
    "start": "node --env-file .env dist/server.js",
    "build": "tsc -p tsconfig.build.json",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:run": "vitest run",
    "test:ui": "vitest --ui",
    "coverage": "vitest run --coverage",
    "prepare": "husky",
    "lint": "node --max-old-space-size=4096 ./node_modules/.bin/eslint . --ext .ts,.tsx --cache",
    "lint:fix": "node --max-old-space-size=4096 ./node_modules/.bin/eslint . --ext .ts,.tsx --fix --cache",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "keywords": [],
  "author": "Swopnil Acharya",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^6.0.0",
    "compression": "^1.8.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.17.0",
    "morgan": "^1.10.1",
    "ms": "^2.1.3",
    "winston": "^3.17.0",
    "zod": "^4.0.14"
  },
  "devDependencies": {
    "@eslint/js": "^9.32.0",
    "@tsconfig/node24": "^24.0.1",
    "@types/bcrypt": "^6.0.0",
    "@types/compression": "^1.8.1",
    "@types/cookie-parser": "^1.4.9",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/helmet": "^0.0.48",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/mongoose": "^5.11.96",
    "@types/morgan": "^1.9.10",
    "@types/ms": "^2.1.0",
    "@types/node": "^24.2.0",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/eslint-plugin": "^1.3.4",
    "eslint": "^9.32.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.4",
    "mongodb-memory-server": "^10.2.0",
    "prettier": "^3.6.2",
    "supertest": "^7.1.4",
    "tsx": "^4.20.3",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "imports": {
    "#*": "./src/*"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "node --max-old-space-size=4096 ./node_modules/.bin/eslint --fix --cache --max-warnings=0"
    ],
    "*.{js,jsx,ts,tsx,json,yml,yaml,md}": [
      "prettier --write"
    ]
  }
}
